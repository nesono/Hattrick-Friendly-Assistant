{
  "name": "Hattrick Friendly Assistant",
  "version": "0.1",
  "description": "Assisting utility to challenge rare countries for friendlies",
  "content_scripts": [
    {
      "matches": ["http://*.hattrick.org/Club/Challenges/*", "http://*.hattrick.org/Club/Flags/*", "http://*.hattrick.org/World/Leagues/"],
      "js": ["hfa_main.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  }
}
